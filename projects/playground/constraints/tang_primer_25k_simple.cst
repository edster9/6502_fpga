# Tang Primer 25K constraints for 8-switch, 8-LED playground
# Simple direct switch-to-LED mapping

# Clock input - 50MHz crystal
IO_LOC "clk" E2;
IO_PORT "clk" PULL_MODE=UP DRIVE=OFF;

# Key input (optional, not used in this design but kept for compatibility)  
IO_LOC "key" K6;
IO_PORT "key" PULL_MODE=UP DRIVE=OFF;

# 8 Switches on PMOD1 connector (inputs with pullups)
IO_LOC "switches[0]" G5;   # PMOD1 pin 1
IO_LOC "switches[1]" F5;   # PMOD1 pin 2  
IO_LOC "switches[2]" G7;   # PMOD1 pin 3
IO_LOC "switches[3]" G8;   # PMOD1 pin 4
IO_LOC "switches[4]" H7;   # PMOD1 pin 5
IO_LOC "switches[5]" H8;   # PMOD1 pin 6
IO_LOC "switches[6]" H5;   # PMOD1 pin 7
IO_LOC "switches[7]" J5;   # PMOD1 pin 8

# 8 LEDs on PMOD2 connector (outputs)
IO_LOC "leds[0]" A11;  # PMOD2 LED 1
IO_LOC "leds[1]" E11;  # PMOD2 LED 2
IO_LOC "leds[2]" K11;  # PMOD2 LED 3
IO_LOC "leds[3]" L5;   # PMOD2 LED 4
IO_LOC "leds[4]" A10;  # PMOD2 LED 5
IO_LOC "leds[5]" E10;  # PMOD2 LED 6
IO_LOC "leds[6]" L11;  # PMOD2 LED 7
IO_LOC "leds[7]" K5;   # PMOD2 LED 8

# Switch settings - inputs with pullups (so switches pull to ground when pressed)
IO_PORT "switches[0]" PULL_MODE=UP DRIVE=OFF;
IO_PORT "switches[1]" PULL_MODE=UP DRIVE=OFF;
IO_PORT "switches[2]" PULL_MODE=UP DRIVE=OFF;
IO_PORT "switches[3]" PULL_MODE=UP DRIVE=OFF;
IO_PORT "switches[4]" PULL_MODE=UP DRIVE=OFF;
IO_PORT "switches[5]" PULL_MODE=UP DRIVE=OFF;
IO_PORT "switches[6]" PULL_MODE=UP DRIVE=OFF;
IO_PORT "switches[7]" PULL_MODE=UP DRIVE=OFF;

# LED settings - outputs with 8mA drive strength
IO_PORT "leds[0]" PULL_MODE=NONE DRIVE=8;
IO_PORT "leds[1]" PULL_MODE=NONE DRIVE=8;
IO_PORT "leds[2]" PULL_MODE=NONE DRIVE=8;
IO_PORT "leds[3]" PULL_MODE=NONE DRIVE=8;
IO_PORT "leds[4]" PULL_MODE=NONE DRIVE=8;
IO_PORT "leds[5]" PULL_MODE=NONE DRIVE=8;
IO_PORT "leds[6]" PULL_MODE=NONE DRIVE=8;
IO_PORT "leds[7]" PULL_MODE=NONE DRIVE=8;